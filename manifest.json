{
  "manifest_version": 3,
  "name": "Right Click Ipsum",
  "version": "1.0.0",
  "description": "Right-click in any text field to insert lorem ipsum text.",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "trigger-ipsum-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Open Ipsum popup in focused field"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fakedata.js", "fielddetector.js", "content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
